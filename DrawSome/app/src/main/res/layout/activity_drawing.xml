<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myDrawing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@color/material_grey_100">

    <ImageButton
        android:id="@+id/large_brush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/large_brush"
        android:onClick="onLargeBrushClick"/>
    <ImageButton
        android:id="@+id/medium_brush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/medium_brush"
        android:onClick="onMedBrushClick"/>
    <ImageButton
        android:id="@+id/small_brush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/small_brush"
        android:onClick="onSmallBrushClick"/>

    </LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@color/material_grey_100">

<ImageButton
        android:id="@+id/color_FFFFFFFF"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        android:background="#FFFFFFFF"
        android:contentDescription="@string/paint"
        android:onClick="setColor"
        />
    <ImageButton
        android:id="@+id/color_000000"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        android:background="#000000"
        android:contentDescription="@string/paint"
        android:onClick="setColor"

        />

    <ImageButton
        android:id="@+id/color_FF0000"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        android:background="#FF0000"
        android:contentDescription="@string/paint"
        android:onClick="setColor"
        />

    <ImageButton
        android:id="@+id/color_006600"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        android:background="#006600"
        android:contentDescription="@string/paint"
        android:onClick="setColor"
       />
    <ImageButton
        android:id="@+id/color_FF660000"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        android:background="#FF660000"
        android:contentDescription="@string/paint"
        android:onClick="setColor"
        />

    <ImageButton
        android:id="@+id/color_FFFF00"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        android:background="#FFFF00"
        android:contentDescription="@string/paint"
        android:onClick="setColor"
        />

</LinearLayout>
    <com.drawsome.drawing.DrawView
        android:id="@+id/draw"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="#FFFFFFFF" />
</LinearLayout>
